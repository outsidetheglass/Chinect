<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.outsideaglass.chinect">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ListeningActivity"
            android:label="@string/title_activity_listening"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.outsideaglass.chinect.MainActivity" />
        </activity>
        <activity
            android:name=".ReadingActivity"
            android:label="@string/title_activity_reading"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.outsideaglass.chinect.MainActivity" />
        </activity>
        <activity
            android:name=".WritingActivity"
            android:label="@string/title_activity_writing"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.outsideaglass.chinect.MainActivity" />
        </activity>
        <activity
            android:name=".SpeakingActivity"
            android:label="@string/title_activity_speaking"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.outsideaglass.chinect.MainActivity" />
        </activity>
        <activity
            android:name=".VocabActivity"
            android:label="@string/title_activity_vocab"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.outsideaglass.chinect.MainActivity" />
        </activity>
    </application>

</manifest>
